---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialLinks from '../components/SocialLinks.astro';
import { site } from '../../config/site';
---

<BaseLayout title="About" description={`Learn more about ${site.author.name}`}>
  <section class="py-12 md:py-16">
    <div class="container mx-auto px-4 max-w-3xl lg:max-w-6xl">
      <!-- Header Section -->
      <header class="text-center mb-12">
        <div class="mb-6">
          <img
            src={site.author.avatar}
            alt={site.author.name}
            class="w-32 h-32 rounded-full mx-auto object-cover shadow-lg"
            width="128"
            height="128"
            loading="eager"
            onerror="this.style.display='none'"
          />
        </div>
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
          {site.author.name}
        </h1>
        <p class="text-gray-600 text-lg">Software Engineer & Technical Writer</p>
        <div class="mt-4">
          <SocialLinks iconSize="h-6 w-6" class="justify-center" />
        </div>
      </header>

      <!-- Content Container - Centered -->
      <div class="max-w-3xl mx-auto">
        <!-- Bio Section -->
        <section class="prose prose-lg mx-auto mb-12">
        <h2>About Me</h2>
        <p>{site.author.bio}</p>
        <p>
          I believe writing clear, practical content helps the writer refine their thoughts, 
          opinions, & their ability to reach the intented audience. Whether it is explaining 
          complex architectural patterns or messaging a teammate asking for help, my goal is 
          to improve the general quality of communication for teams & projects I work on.
        </p>
      </section>

      <!-- Experience Section (Mini Resume) -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Experience Highlights</h2>

        <div class="space-y-6">
          <div class="border-l-4 border-primary-500 pl-4">
            <h3 class="font-semibold text-gray-900">Director of Software Engineering</h3>
            <p class="text-gray-600 text-sm">JPMC | Present</p>
            <p class="text-gray-700 mt-2">
              Leading technical initiatives and growing teams. Focus on
              using GenAI for real value as a partner to business expertise.
            </p>
          </div>

          <div class="border-l-4 border-gray-300 pl-4">
            <h3 class="font-semibold text-gray-900">VP of Software Engineering</h3>
            <p class="text-gray-600 text-sm">JPMC | Previous </p>
            <p class="text-gray-700 mt-2">
              Built and maintained production systems serving both internal & external clients. 
            </p>
          </div>
        </div>

      </section>

      <!-- Technical Areas of Interest -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Projects & Purpose</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Document Data Extraction -->
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2">Document Data Extraction with LLMs</h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  Exploring intelligent document processing and structured data extraction using large
                  language models. Focused on transforming unstructured documents into actionable data.
                </p>
              </div>
            </div>
          </div>

          <!-- Financial Education -->
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-8 w-8 text-primary-600"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 mb-2">Financial Education</h3>
                <p class="text-gray-600 text-sm leading-relaxed">
                  Building tools and resources to make financial literacy accessible for the teen to young 20s population. The earlier we start, the more empowered we are.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Skills Section -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Technical Skills</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <h3 class="font-semibold text-gray-900 mb-3">Languages & Frameworks</h3>
            <div class="flex flex-wrap gap-2">
              {
                ['TypeScript', 'Python', 'Java', 'React', 'Node.js'].map(
                  (skill) => (
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                      {skill}
                    </span>
                  )
                )
              }
            </div>
          </div>

          <div>
            <h3 class="font-semibold text-gray-900 mb-3">Tools & Platforms</h3>
            <div class="flex flex-wrap gap-2">
              {
                ['AWS', 'Docker', 'Kubernetes', 'Terraform','Claude Code'].map(
                  (skill) => (
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">
                      {skill}
                    </span>
                  )
                )
              }
            </div>
          </div>
        </div>
      </section>

      <!-- Contact CTA -->
      <section class="bg-gray-50 rounded-lg p-8 text-center">
        <h2 class="text-xl font-bold text-gray-900 mb-2">Get in Touch</h2>
        <p class="text-gray-600 mb-4">
          Interested in collaborating or have questions? Feel free to reach out!
        </p>
        <div class="flex justify-center gap-4">
          <a
            href={site.social.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors"
          >
            Connect on LinkedIn
          </a>
          <a
            href={site.social.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-900 transition-colors"
          >
            Follow on GitHub
          </a>
        </div>
      </section>
      </div>
      <!-- End Content Container -->
    </div>
  </section>
</BaseLayout>
